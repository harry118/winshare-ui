{
  "npmClient": "yarn",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    }
  }
}
